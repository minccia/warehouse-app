<article>
  <header>
    <h2> <%= t 'suppliers' %> </h2>
  </header>

  <main>
    <% if @suppliers.any? %>
      <table>
        <thead>
          <tr>
            <th> <%= Supplier.human_attribute_name 'brand_name' %> </th>
            <th> <%= t 'localization' %> </th>
            <th> <%= Supplier.human_attribute_name 'email' %> <th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each do |sup| %>
            <tr>
              <td> <%= link_to sup.brand_name, supplier_path(sup.id) %> &nbsp;&nbsp;&nbsp;&nbsp; </td>
              <td> <%= sup.city %> - <%= sup.state %> &nbsp;&nbsp;&nbsp;&nbsp; </td>
              <td> <%= sup.email %> 
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p> <%= t 'no_suppliers_registered' %> </p>
    <% end %>
  </main>
  <footer>
    <ul>
      <li> <%= link_to "#{ t 'new' } #{ t 'activerecord.models.supplier' }", new_supplier_path %> </li>
    </ul>
  </footer>
</article>