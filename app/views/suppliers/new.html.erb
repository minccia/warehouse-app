<article>
  <header>
    <%= t 'register_suppliers' %>
    <%= render partial: 'errors' %>
  </header>
  <main>
    <%= form_with model: @supplier do |f| %>
      <p>
        <%= f.label :corporate_name %>
        <%= f.text_field :corporate_name %>
      </p>
      <p>
        <%= f.label :brand_name %>
        <%= f.text_field :brand_name %>
      </p>
      <p>
        <%= f.label :registration_number %>
        <%= f.number_field :registration_number %>
      </p>
      <p>
        <%= f.label :full_address %>
        <%= f.text_field :full_address %>
      </p>
      <p>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </p>
      <p>
        <%= f.label :state %>
        <%= f.text_field :state %>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :phone_number %>
        <%= f.number_field :phone_number %>
      </p>
      <p>
        <%= f.submit t 'buttons.send' %>
      </p>
    <% end %>
  </main>
</article>