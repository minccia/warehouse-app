<!DOCTYPE html>
<html>
  <head>
    <title>WarehouseApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <%= link_to root_path do %>
        <h1> <%= "#{ t 'warehouses_and_stock' }" %> </h1>
      <% end %>
      <nav>
        <%= link_to t('buttons.home'), root_path %> |
        <%= link_to t('suppliers'), suppliers_path %> |
        <%= link_to t('product_models'), product_models_path %> |
        <%= link_to 'Novo Pedido', new_order_path %>
        <% if user_signed_in? %>
          <%= "OlÃ¡, #{current_user.description}" %>
          <%= button_to t('buttons.sign_out'), destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to t('buttons.sign_in'), new_user_session_path %>
        <% end %>
      </nav>
      <section>
        <%= alert %>
        <%= notice %>
      </section>
    </header>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
