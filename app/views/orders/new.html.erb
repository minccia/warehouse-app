<article>
  <header>
    <h2> <%= t 'new' %> <%= Order.model_name.human %> </h2>
    <%= render partial: 'application/errors', locals: { model: @order } %>
  </header>
  <main>
      <%= form_with model: @order do |f| %>
        <p>
          <%= f.label :warehouse_id %>
          <%= f.collection_select :warehouse_id, Warehouse.all, :id, :full_description, prompt: true  %>
        </p>
        <p>
          <%= f.label :supplier_id %>
          <%= f.collection_select :supplier_id, Supplier.all, :id, :full_description, prompt: true %>
        </p>
        <p>
          <%= f.label :estimated_delivery_date %>
          <%= f.date_field :estimated_delivery_date, min: Date.today %>
        </p>
        <p>
          <%= f.submit t('buttons.send') %>
        </p>
      <% end %>
  </main>
</article>